{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "strictPropertyInitialization": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2015",
      "es2017",
      "es2018",
      "dom"
    ],
    "types": [
      "node"
    ],
    "paths": {
      "@zentrumnawi/solid/core": [
        "libs/solid/core/src/index.ts"
      ],
      "@zentrumnawi/solid/quiz": [
        "libs/solid/quiz/src/index.ts"
      ],
      "@zentrumnawi/solid/slideshow": [
        "libs/solid/slideshow/src/index.ts"
      ]
    },
    "rootDir": "."
  },
  "angularCompilerOptions": {
    "strictTemplates": true,
    "strictInjectionParameters": true
  }
}
