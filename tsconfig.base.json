{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "strictPropertyInitialization": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "ES2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2015", "es2017", "es2018", "dom"],
    "types": ["node"],
    "paths": {
      "@zentrumnawi/solid-core": ["libs/solid/core/src/index.ts"],
      "@zentrumnawi/solid-glossary": ["libs/solid/glossary/src/index.ts"],
      "@zentrumnawi/solid-profile": ["libs/solid/profile/src/index.ts"],
      "@zentrumnawi/solid-profile/di": [
        "libs/solid/profile/di/src/public_api.ts"
      ],
      "@zentrumnawi/solid-quiz": ["libs/solid/quiz/src/index.ts"],
      "@zentrumnawi/solid-skeleton": ["libs/solid/skeleton/src/index.ts"],
      "@zentrumnawi/solid-slideshow": ["libs/solid/slideshow/src/index.ts"]
    },
    "rootDir": ".",
    "allowSyntheticDefaultImports": true
  },
  "angularCompilerOptions": {
    "strictTemplates": true,
    "strictInjectionParameters": true
  }
}
